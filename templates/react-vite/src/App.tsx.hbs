import { Routes, Route } from 'react-router-dom';
import { ProtectedRoute } from '@githat/nextjs';
import Home from './pages/Home{{#unless typescript}}.jsx{{/unless}}';
import SignIn from './pages/SignIn{{#unless typescript}}.jsx{{/unless}}';
import SignUp from './pages/SignUp{{#unless typescript}}.jsx{{/unless}}';
{{#if includeForgotPassword}}
import ForgotPassword from './pages/ForgotPassword{{#unless typescript}}.jsx{{/unless}}';
{{/if}}
{{#if includeEmailVerification}}
import VerifyEmail from './pages/VerifyEmail{{#unless typescript}}.jsx{{/unless}}';
{{/if}}
{{#if includeDashboard}}
import Dashboard from './pages/Dashboard{{#unless typescript}}.jsx{{/unless}}';
{{/if}}

function NotFound() {
  return (
    <main style=\{{ display: 'flex', alignItems: 'center', justifyContent: 'center', minHeight: '100vh', background: '#09090b' }}>
      <div style=\{{ textAlign: 'center' }}>
        <h1 style=\{{ fontSize: '3rem', fontWeight: 700, color: '#fafafa' }}>404</h1>
        <p style=\{{ color: '#a1a1aa', marginBottom: '1.5rem' }}>Page not found.</p>
        <a href="/" style=\{{ color: '#7c3aed', textDecoration: 'underline' }}>Go home</a>
      </div>
    </main>
  );
}

export default function App() {
  return (
    <>
      <Routes>
        <Route path="/" element={<Home />} />
        <Route path="/sign-in" element={<SignIn />} />
        <Route path="/sign-up" element={<SignUp />} />
{{#if includeForgotPassword}}
        <Route path="/forgot-password" element={<ForgotPassword />} />
{{/if}}
{{#if includeEmailVerification}}
        <Route path="/verify-email" element={<VerifyEmail />} />
{{/if}}
{{#if includeDashboard}}
        <Route path="/dashboard/*" element={<ProtectedRoute><Dashboard /></ProtectedRoute>} />
{{/if}}
        <Route path="*" element={<NotFound />} />
      </Routes>
      <footer style=\{{ textAlign: 'center', padding: '1rem 0', fontSize: '0.75rem', color: '#52525b' }}>
        <a href="https://githat.io" target="_blank" rel="noopener noreferrer" style=\{{ color: '#7c3aed', textDecoration: 'none' }}>
          Powered by GitHat
        </a>
      </footer>
    </>
  );
}
